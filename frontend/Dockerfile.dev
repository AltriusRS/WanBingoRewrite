# Use Bun's official image as base
FROM oven/bun:1.3

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json bun.lock ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Run the development server with hot reload
CMD ["bun", "run", "dev"]